<div class="container">
  <div class="row mt-5">
    <div class="col-lg-4 col-md-6 col-12">
      {{#each workouts}}
      <div data-id="{{this._id}}" class="card workout-card">
        <div class="card-body">
          <h5 class="card-title">{{formatDate this.day}}</h5>
          <h6>{{this.totalDuration}} minutes</h6>
        </div>

        <div class="accordion" id="accordionExample">
          {{#each this.exercises}}
          <div class="card">
            <div class="card-header d-flex" id="heading{{this._id}}">
              <h2 class="mb-0 flex-fill">
                <button class="btn btn-link btn-block text-left font-weight-bold" type="button" data-toggle="collapse"
                  data-target="#collapse{{this._id}}" aria-expanded="true" aria-controls="collapse{{this._id}}">
                  {{this.name}}
                  
                </button>
                
              </h2>
              <button data-id="{{this._id}}" class="del-btn btn-danger float-right">Del</button>
            </div>

            <div id="collapse{{this._id}}" class="collapse" aria-labelledby="heading{{this._id}}"
              data-parent="#accordionExample">
              <div class="card-body">
                <ul class="list-group list-group">
                  <li class="list-group-item">Type: <span class="font-weight-bold">{{this.type}}</span></li>
                  <li class="list-group-item">Duration: <span class="font-weight-bold">{{this.duration}} minutes</span></li>
                  {{#if (isCardio this.type)}}
                  <li class="list-group-item">Distance: <span class="font-weight-bold">{{this.distance}} miles</span></li>
                  {{else}}
                  <li class="list-group-item">Weight: <span class="font-weight-bold">{{this.weight}} lbs</span></li>
                  <li class="list-group-item">Sets: <span class="font-weight-bold">{{this.sets}}</span></li>
                  <li class="list-group-item">Reps: <span class="font-weight-bold">{{this.reps}}</span></li>
                  {{/if}}

                </ul>
              </div>
            </div>
          </div>
          {{/each}}
        </div>



      </div>
      {{/each}}
    </div>
  </div>
  {{#if workouts}}
  <div class="row mt-5">
    <div class="col-lg-4 col-md-6 col-12">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Add exercise to workout</h5>
          <form id="add-form">
            <div class="row">
              <div class="col">
                <input type="text" id="name-field" class="form-control" placeholder="Name">
              </div>
            </div>
            <div class="row">
              <div class="col">
                <input type="number" min="0" id="duration-field" class="form-control" placeholder="Duration">
              </div>
            </div>
            <hr />
            <div id="radio-area" class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="radio-buttons" id="cardio-radio" value="cardio"
                checked>
              <label class="form-check-label" for="cardio-radio">
                Cardio
              </label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="radio-buttons" id="weights-radio" value="weights">
              <label class="form-check-label" for="weights-radio">
                Weights
              </label>
            </div>
            <hr />
            <div class="row">
              <div class="col">
                <input type="number" min="0" id="distance-field" class="form-control" placeholder="Distance(mi)">
              </div>
              <div class="col">
                <input type="number" min="0" id="weight-field" class="form-control" placeholder="Weight(lbs)" disabled>
                <input type="number" min="0" id="sets-field" class="form-control" placeholder="Sets" disabled>
                <input type="number" min="0" id="reps-field" class="form-control" placeholder="Reps" disabled>
              </div>
            </div>
            <hr />
            <div class="row">
              <div class="col">
                <button type="button" id="add-button" class="btn btn-primary float-right">Add</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  {{/if}}
</div>

<script src="js/view.js"></script>